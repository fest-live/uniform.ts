{
    "include": ["./src/**/*.ts", "./test/**/*.ts", "./src/$core/*.ts", "./src/$wrap/*.ts"],
    "exclude": ["./dist/**/*", "./externals/**/*"],
    "compilerOptions": {
        "outDir": "./dist/",
        "paths": {
            "fest/*": ["../../shared/fest/*"],
            "fest/core": ["../core.ts/dist/core.js"],
            "fest/uniform": ["./dist/uniform.js"]
        },
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "WebWorker", "ESNext.Promise"],
        "types": ["chrome", "chrome-extension"],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "allowArbitraryExtensions": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "noImplicitAny": false,
        "declaration": false,
        "noImplicitThis": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "moduleDetection": "force",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "typeRoots": ["plugins/global.d.ts"]
    }
}
