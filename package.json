{
    "name": "@fest/uniform",
    "description": "Universal Worker helper library",
    "version": "1.0.0alpha",
    "private": false,
    "type": "module",
    "index": "./dist/uniform.js",
    "scripts": {
        "dev": "vite --host 0.0.0.0",
