        "esbuild": "^0.25.0",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^10.0.1",
        "postcss-preset-env": "^10.2.3",
        "terser": "^5.44.0",
        "typescript": "^5.9.3",
        "vite": ">=7.1.11",
